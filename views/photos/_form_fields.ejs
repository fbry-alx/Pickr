<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" autocomplete="off" value="<%= photo.title %>">
  </div>
  <div class="form-item">
    <label>Photographer</label>
    <select name="photographer">
      <% photographers.forEach(photographer => { %>
      <% if (photographer.id === photo.photographer) { %>
      <option selected label="<%= photographer.name %>" value="<%= photographer.id %>">
        <% } else { %>
      <option label="<%= photographer.name %>" value="<%= photographer.id %>">
        <% } %>
        <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Post Date</label>
    <input type="date" name="publishDate" value="<%= photo.publishDate  %>">
  </div>

</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Photo</label>
    <input type="file" name="cover" class="photo-cover filepond">
  </div>
  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= photo.description %></textarea>
  </div>
</div>